extends layout 

block content
    .w3-card-4
            header.w3-container.w3-teal
                h1
                    span #{title}
            .w3-container
                table.w3-table-all
                    tr
                        th nome
                    each item in pessoas 
                        tr
                            td
                                a(href=`/pessoas/${item._id}`)= item.nome