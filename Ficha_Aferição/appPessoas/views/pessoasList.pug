extends layout 

block content
    .w3-card-4
            header.w3-container.w3-teal
                h1
                    span #{title}
                    |
                    a.w3-btn.w3-round.w3-grey(href="/pessoas/add") +
            .w3-container
                table.w3-table-all
                    tr
                        th nome
                        th Actions
                    each item in pessoas
                        tr
                            td
                                a(href=`/pessoas/${item._id}`)= item.nome
                            td
                                span [
                                    a(href=`/pessoas/edit/${item._id}`) Edit
                                span ]
                                span [
                                    a(href=`/pessoas/delete/${item._id}`) Delete
                                span ]